<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bookbayandroid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeFragment"></activity>
        <activity android:name=".ViewOutgoingCancelRequest"></activity>
        <activity android:name=".ViewOutgoingAcceptRequest"></activity>
        <activity android:name=".ViewOutgoingDeclineRequest"></activity>
        <activity android:name=".ViewIncomingAcceptRequest"></activity>
        <activity android:name=".ViewIncomingCancelRequest"></activity>
        <activity android:name=".ViewIncomingDeclineRequest"></activity>
        <activity android:name=".PendingRequestsFragment"></activity>
        <activity android:name=".ViewIncomingRequest"></activity>
        <activity android:name=".ViewOutgoingRequest"></activity>
        <activity android:name=".RequestUser"></activity>
        <activity android:name=".ViewBook"></activity>
        <activity android:name=".BookDetail"></activity>
        <activity android:name=".AddBook" />
        <activity android:name=".MyBooksFragment" />
        <activity android:name=".MyAccountFragment" />
        <activity
            android:name=".NavDrawer"
            android:label="@string/title_activity_nav_drawer"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>